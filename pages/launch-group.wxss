}
.flex {
  display: flex;
}
.fadein {
  animation: fadein .4s  ease both;
}
@keyframes fadein {
  0% {
    opacity: 0;
    left: 0;
  }
  100% {
    opacity: 1;
    left: 0;
  }
}
.fadeout {
  animation: fadeout .4s  ease both;
}
@keyframes fadeout {
  0% {
    opacity: 1;
    left: 0;
  }
  99% {
    opacity: 0 ;
    left: 0;
  }
  100% {
    opacity: 0 ;
    left: -100%;
  }
}
